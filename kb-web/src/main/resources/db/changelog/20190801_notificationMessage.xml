<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="28-create-message" author="yunish">
        <createTable tableName="message">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="toId" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="fromId" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="customerId" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="loanConfigId" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="message" type="VARCHAR(256)">
                <constraints nullable="false"/>
            </column>
            <column name="senderName" type="VARCHAR(256)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
