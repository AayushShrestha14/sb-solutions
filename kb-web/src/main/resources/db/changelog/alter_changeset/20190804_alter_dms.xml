<databaseChangeLog
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
  <changeSet author="dipu" id="31_alter_dms">
    <dropColumn
      columnName="customer_name"
      tableName="dms_loan_file"/>
    <dropColumn
      columnName="citizenship_number"
      tableName="dms_loan_file"/>
    <dropColumn
      columnName="contact_number"
      tableName="dms_loan_file"/>
    <dropColumn
            columnName="company_name"
            tableName="dms_loan_file"/>
    <dropColumn
            columnName="registration_number"
            tableName="dms_loan_file"/>
    <addColumn
      tableName="dms_loan_file">
      <column name="customer_id" type="BIGINT"/>
    </addColumn>
    <addColumn
            tableName="dms_loan_file">
      <column name="entity_info_id" type="BIGINT"/>
    </addColumn>
    <addForeignKeyConstraint baseColumnNames="customer_id"
      baseTableName="dms_loan_file"
      constraintName="fk_dms_customer_id"
      referencedColumnNames="id"
      referencedTableName="customer"/>
    <addForeignKeyConstraint baseColumnNames="entity_info_id"
                             baseTableName="dms_loan_file"
                             constraintName="fk_dms_entity_info_id"
                             referencedColumnNames="id"
                             referencedTableName="entity_info"/>
  </changeSet>
</databaseChangeLog>
