<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="1-create-scheme" author="rawseek">
        <createTable tableName="scheme">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(256)">
                <constraints nullable="false"/>
            </column>
            <column name="total_points" type="BIGINT"/>
            <column name="eligibility_points" type="BIGINT"/>
            <column name="company_id" type="BIGINT"/>
            <column name="created_by_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="modified_by_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_at" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="INT" defaultValueNumeric="0"/>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="company_id"
                                 baseTableName="scheme"
                                 constraintName="fk_scheme_company_id"
                                 onDelete="CASCADE"
                                 onUpdate="CASCADE"
                                 referencedColumnNames="id"
                                 referencedTableName="company"/>
    </changeSet>
</databaseChangeLog>